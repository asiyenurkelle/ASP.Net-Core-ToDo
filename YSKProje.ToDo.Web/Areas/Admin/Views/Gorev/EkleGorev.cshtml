@model GorevAddViewModel
@{
    ViewData["Title"] = "EkleGorev";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="EkleGorev" method="post" class="w-75 mx-auto p-3">
    <div class="form-group">
        <label>Ad:</label>
        <span asp-validation-for="Ad " class="text-danger"></span>
        <input type="text" asp-for="Ad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <span asp-validation-for="Aciklama" class="text-danger"></span>
        <textarea asp-for="Aciklama" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Aciliyet Durumu Seçiniz:</label>
        <span asp-validation-for="AciliyetId" class="text-danger"></span>
        <select asp-for="AciliyetId" class="form-control" asp-items="ViewBag.Aciliyetler">
            <option hidden value="-1">Seçiniz</option>
            @*seçiniz opsiyonuna -1 atadık ki validasyona takılsın gorevaddviewmodel da range ile minimum 0 olsun diye kısıtlamıstık
                -1 olunca seçmesi için uyarı vericek.*@
        </select>
    </div>
    <button type="submit" class="btn btn-info btn-sm">Kaydet</button>

</form>


@section JavaScript{
    <script src="~/lib/jquery/Validate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}


